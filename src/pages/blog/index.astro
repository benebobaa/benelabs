---
import BaseLayout from '../../layouts/BaseLayout.astro';
import TagList from '../../components/TagList.astro';
import { formatDate } from '../../lib/format';
import { getBlogPosts } from '../../lib/sanity';

const posts = await getBlogPosts();
---

<BaseLayout
  title="Blog | BeneLabs"
  description="Field notes, research, and product thinking from the BeneLabs studio."
>
  <section class="site-container section-block">
    <div class="space-y-3">
      <p class="eyebrow">Blog</p>
      <h1 class="text-4xl">Field notes & research</h1>
      <p class="text-lg text-pretty">
        Essays and observations on building calm interfaces, designing narratives, and shipping fast.
      </p>
    </div>
    <div class="mt-8 grid gap-6">
      {posts.map((post) => (
        <article class="card-surface card-link flex flex-col gap-4 p-6">
          <div class="flex items-center justify-between text-xs text-[var(--color-ink-subtle)]">
            <span>{formatDate(post.publishedAt)}</span>
            <span>Studio journal</span>
          </div>
          <div class="space-y-3">
            <h2 class="text-2xl">
              <a class="hover:text-[var(--color-accent)]" href={`/blog/${post.slug}`}>
                {post.title}
              </a>
            </h2>
            <p class="text-sm text-[var(--color-ink-muted)]">{post.excerpt}</p>
          </div>
          <TagList tags={post.tags ?? []} />
          <a class="text-sm font-semibold text-[var(--color-accent)]" href={`/blog/${post.slug}`}>
            Read article ->
          </a>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
