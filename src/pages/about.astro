---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPageBySlug } from '../lib/sanity';

const page = await getPageBySlug('about');
const title = page?.seo?.title ?? 'About | Benelabs';
const description =
  page?.seo?.description ??
  'Learn about Benelabs and how the studio delivers scalable AI, cloud, and backend systems.';
const heading = page?.title ?? 'Building scalable AI, cloud, and backend solutions.';
const intro =
  page?.intro ??
  'We blend research-driven innovation with practical engineering to deliver systems that scale in production.';
const body =
  page?.content ??
  `<p>At Benelabs, we focus on backend systems, cloud automation, and AI solutions that simplify complexity. Founded by
  Benediktus Satriya, the studio brings hands-on experience from enterprise modernization and platform engineering.</p>
  <p>We are based in Jakarta, Indonesia, and partner globally with teams who want reliable delivery, clear architecture,
  and maintainable systems.</p>`;
const siteUrl = Astro.site ?? 'https://Benelabs.tech';
const pageUrl = new URL('/about', siteUrl).toString();
const personLd = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Benediktus Satriya',
  url: pageUrl,
  jobTitle: 'Founder, Software Engineer',
  description:
    'Software engineer specializing in Golang, Java Spring, and Kubernetes, with experience building scalable backend systems, PaaS platforms, and AI-powered tooling.',
  worksFor: {
    '@type': 'Organization',
    name: 'Benelabs',
    url: siteUrl,
  },
};
---

<BaseLayout title={title} description={description} structuredData={personLd}>
  <section class="site-container section-block">
    <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-4">
        <p class="eyebrow">About</p>
        <h1 class="text-[1.8rem] md:text-4xl">{heading}</h1>
        <p class="text-base text-pretty md:text-lg">{intro}</p>
        <div class="prose max-w-none" set:html={body} />
      </div>
      <div class="card-surface card-pad space-y-5">
        <div class="eyebrow">What we value</div>
        <ul class="space-y-4 text-sm text-[var(--color-ink-muted)]">
          <li>
            <span class="font-semibold text-[var(--color-ink)]">Engineering clarity.</span> Systems that are easy to
            reason about and operate.
          </li>
          <li>
            <span class="font-semibold text-[var(--color-ink)]">Reliability under load.</span> Performance and
            observability in real-world traffic.
          </li>
          <li>
            <span class="font-semibold text-[var(--color-ink)]">Learning and sharing.</span> Open-source contributions
            and technical education.
          </li>
        </ul>
        <div class="border-t border-[var(--color-border)] pt-4 text-sm text-[var(--color-ink-muted)]">
          Based in Jakarta, Indonesia, working globally.
        </div>
      </div>
    </div>
  </section>

  <section class="site-container section-block">
    <div class="full-bleed-mobile grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <div class="card-surface card-link card-pad space-y-3">
        <p class="eyebrow">Backend</p>
        <h3 class="text-xl">Microservices</h3>
        <p class="text-sm text-[var(--color-ink-muted)]">REST and gRPC APIs with scalable data layers.</p>
      </div>
      <div class="card-surface card-link card-pad space-y-3">
        <p class="eyebrow">Cloud</p>
        <h3 class="text-xl">DevOps automation</h3>
        <p class="text-sm text-[var(--color-ink-muted)]">Kubernetes, GitOps, and self-healing infrastructure.</p>
      </div>
      <div class="card-surface card-link card-pad space-y-3">
        <p class="eyebrow">AI</p>
        <h3 class="text-xl">LLM engineering</h3>
        <p class="text-sm text-[var(--color-ink-muted)]">RAG pipelines and multi-agent workflows.</p>
      </div>
      <div class="card-surface card-link card-pad space-y-3">
        <p class="eyebrow">Mobile</p>
        <h3 class="text-xl">Cross-platform apps</h3>
        <p class="text-sm text-[var(--color-ink-muted)]">Flutter and Kotlin with clean architecture.</p>
      </div>
      <div class="card-surface card-link card-pad space-y-3">
        <p class="eyebrow">Modernization</p>
        <h3 class="text-xl">Legacy systems</h3>
        <p class="text-sm text-[var(--color-ink-muted)]">Refactors that improve SLAs and maintainability.</p>
      </div>
    </div>
  </section>
</BaseLayout>
